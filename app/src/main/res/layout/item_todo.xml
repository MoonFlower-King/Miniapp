<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Task Title (with checkbox visual) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:background="@drawable/checkbox_selector"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ä»»åŠ¡åç§°"
            android:textSize="14sp"
            android:textColor="@color/text_main"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Priority Tag -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="é«˜"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_priority_tag"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"/>
    </FrameLayout>

    <!-- Status Tag -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="â— æœªå¼€å§‹"
            android:textSize="11sp"
            android:textColor="@color/text_hint"
            android:background="@drawable/bg_status_tag"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"/>
    </FrameLayout>

    <!-- Assignee Tag -->
    <TextView
        android:id="@+id/tvAssignee"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:visibility="gone"/>

    <!-- Attachment Icon -->
    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Ž"
        android:textSize="12sp"
        android:paddingHorizontal="4dp"
        android:visibility="gone"/>

    <!-- Due Date -->
    <TextView
        android:id="@+id/tvDueDate"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="12/31/2025"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        android:gravity="end"/>
</LinearLayout>
